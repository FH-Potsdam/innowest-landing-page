---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "cva";
import Type2 from "../components/Shapes/Evolution/02/Type2.astro";

const navigation = cva({
	base: "flex py-6 px-12 justify-between",
	// **or**
	// base: ["font-semibold", "border", "rounded"],
	variants: {
		colour: {
			default: "bg-white text-black",
			coloured: "bg-set-1-200 text-black",
			black: "bg-black text-white",
		},
	},
	defaultVariants: {
		colour: "default",
	},
});

export interface Props
	extends HTMLAttributes<"button">,
		VariantProps<typeof navigation> {}

const { colour = "default" } = Astro.props;
---

<div class={navigation({ colour })}>
	<div class="flex gap-4">
		<Type2 />
	</div>
	<div></div>
</div>
